# Claim Forecast - Environment Configuration
# Copy this file to .env and update with your local paths

# =============================================================================
# DATA PATHS
# =============================================================================

# Root directory for all data files
# Windows: C:\Users\YourName\OneLake - Microsoft\...
# Mac/Linux: /Users/YourName/data or /home/username/data
CLAIM_FORECAST_DATA_ROOT=./data

# Backup data root (for backup mode when main data source unavailable)
CLAIM_FORECAST_BACKUP_ROOT=./data/_data

# =============================================================================
# BACKUP MODE PATHS (for CSV fallback)
# =============================================================================

# CSA backup data location
BACKUP_MODE_CSA_PATH=./data/_data/csa

# TripMate backup data location
BACKUP_MODE_TM_PATH=./data/_data/tripmate

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Default backup mode setting (true/false)
DEFAULT_BACKUP_MODE=true

# Default granularity for reports (Month/Week/Day)
DEFAULT_GRANULARITY=Month

# Maximum number of segments to process in batch
MAX_BATCH_SEGMENTS=50

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log file location
LOG_FILE_PATH=./logs/claim_forecast.log

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Number of months to forecast ahead
FORECAST_HORIZON_MONTHS=36

# Default confidence level for development patterns
DEFAULT_CONFIDENCE_LEVEL=0.95

# Cache TTL in seconds (for data caching)
CACHE_TTL=3600
